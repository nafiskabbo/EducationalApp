<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.EducationalApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="backgroundTint">@color/editTextBgColor</item>
        <item name="boxBackgroundColor">@color/editTextBgColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="hintTextColor">@color/darkGrey</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="errorIconDrawable">@drawable/error_icon</item>
        <item name="errorIconTint">@color/blue</item>
        <item name="errorTextColor">@color/blue</item>
        <item name="startIconTint">@color/blue</item>
    </style>


    <style name="RedProgressBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="AppThemeOrange.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeOrange.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>